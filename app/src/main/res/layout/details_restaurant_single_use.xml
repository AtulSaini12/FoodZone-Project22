<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="6dp"
    android:background="#c6ff00"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/llcontent1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtSNo"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="1."
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/txtNameRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:text="Name of the Dish"
                    android:layout_marginTop="1dp"
                    android:padding="4dp"/>
                <LinearLayout
                    android:id="@+id/lllinear"
                    android:layout_below="@id/txtNameRes"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      Rs. "
                        android:textStyle="italic"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/txtCostRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="13sp"
                        android:textStyle="italic"
                        android:textColor="#827717"
                        />
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btnAddorRemove"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Add"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>